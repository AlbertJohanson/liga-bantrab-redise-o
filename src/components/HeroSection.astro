---
import MatchCard from "./MatchCard.astro";
import matches from '../data/matches.json'
---

<section class="hero">
    <div class="hero-pattern"></div>
    <div class="hero-content">
        <div class="hero-text">
            <h1>
                LA LIGA
                <span class="highlight">NOS UNE</span>
            </h1>
            <p class="hero-subtitle">
                Aqui nadie es espectador.
                Todos los amantes del futbol, pronto seran convocados
            </p>
            <div class="hero-buttons">
                <a href="#" class="btn btn-primary">
                    <span>ðŸ“º</span> Ver en Vivo
                </a>
                <a href="#" class="btn btn-secondary">
                    Calendario Completo
                </a>
            </div>

        </div>

        <div class="matches-carousel-container">
            <div class="carousel-header">
                <h3 class="carousel-title">JORNADA 1 â€¢ CLAUSURA 2026</h3>
            </div>

            <div class="matches-carousel">
                    <div class="carousel-track" id="carouselTrack">
                        {
                            matches.map((match) => (
                                <MatchCard 
                                    homeTeam={match.homeTeam}
                                    awayTeam={match.awayTeam}
                                    date={match.date}
                                    time={match.time}
                                    venue={match.venue}
                                />
                            ))
                        }
                    </div>
            </div>

            <div class="carousel-dots" id="carouselDots">
                {
                    matches.map((_, index) => (
                        <button 
                            class:list={["carousel-dot", {active: index === 0}]}
                            data-index={index}
                            aria-label={`Ir al partido ${index + 1}`}/>
                    ))
                }
            </div>
        </div>
    </div>
</section>

<script>
    const track = document.getElementById("carouselTrack")
    const dots = document.querySelectorAll('.carousel-dot');

    let currentSlide = 0;
    const totalSlides = dots.length;

    function updateCarousel() {
        if(track) {
            track.style.transform = `translateX(-${currentSlide * 100}%)`
        }

        dots.forEach((dot, index) => {
            dot.classList.toggle('active', index === currentSlide)
        })
    }

    function moveCarousel(direction: number) {
        currentSlide += direction;
        if(currentSlide < 0) currentSlide = totalSlides - 1;
        if(currentSlide >= totalSlides) currentSlide = 0;
        updateCarousel()
    }

    function goToSlide(index: number) {
        currentSlide = index;
        updateCarousel();
    }

    dots.forEach((dot) => {
        dot.addEventListener('click', () => {
            const index = Number(dot.getAttribute('data-index'));
            goToSlide(index);
        })
    })

    setInterval(() => moveCarousel(1), 5000);

    let touchStartX = 0;
    let touchEndX = 0;

    track?.addEventListener('touchstart', (e) => {
        touchStartX = (e as TouchEvent).changedTouches[0].screenX;
    });

     track?.addEventListener('touchend', (e) => {
        touchEndX = (e as TouchEvent).changedTouches[0].screenX;
        if(touchStartX - touchEndX > 50) moveCarousel(1);
        if(touchEndX - touchStartX > 50) moveCarousel(-1);
    });
</script>

<style>
    .hero {
        min-height: 100vh;
        background: linear-gradient(135deg, var(--turquesa) 0%, var(--turquesa-oscuro) 50%, var(--turquesa-profundo) 100%);
        position: relative;
        display: flex;
        align-items: center;
        overflow: hidden;
    }

    .hero::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: 
            radial-gradient(circle at 20% 80%, rgba(13, 92, 86, 0.3) 0%, transparent 40%),
            radial-gradient(circle at 80% 20%, rgba(255, 255, 255, 0.1) 0%, transparent 40%);
        pointer-events: none;
    }

    .hero-pattern {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-image: 
            repeating-linear-gradient(
                0deg,
                transparent,
                transparent 60px,
                rgba(255, 255, 255, 0.03) 60px,
                rgba(255, 255, 255, 0.03) 61px
            ),
            repeating-linear-gradient(
                90deg,
                transparent,
                transparent 60px,
                rgba(255, 255, 255, 0.03) 60px,
                rgba(255, 255, 255, 0.03) 61px
            );
        pointer-events: none;
    }

    .hero-content {
        max-width: 1400px;
        margin: 0 auto;
        padding: 8rem 2rem 4rem;
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 4rem;
        align-items: center;
        position: relative;
        z-index: 1;
    }

    .hero-text h1 {
        font-family: 'Bebas Neue', sans-serif;
        font-size: clamp(3rem, 8vw, 6rem);
        line-height: 0.95;
        letter-spacing: 3px;
        margin-bottom: 1.5rem;
    }

    .hero-text h1 .highlight {
        color: var(--turquesa);
        background: var(--negro);
        padding: 0 0.5rem;
        display: inline-block;
        transform: skewX(-5deg);
    }

    .hero-subtitle {
        font-size: 1.2rem;
        color: rgba(255, 255, 255, 0.85);
        margin-bottom: 2rem;
        max-width: 500px;
        line-height: 1.7;
    }

    .hero-buttons {
        display: flex;
        gap: 1rem;
        flex-wrap: wrap;
    }

    .btn {
        padding: 1rem 2rem;
        font-size: 0.95rem;
        font-weight: 600;
        border-radius: 8px;
        cursor: pointer;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
    }

    .btn-primary {
        background: var(--negro);
        color: var(--turquesa);
        border: none;
    }

    .btn-primary:hover {
        background: var(--blanco);
        color: var(--negro);
        transform: translateY(-3px);
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
    }

    .btn-secondary {
        background: transparent;
        color: var(--blanco);
        border: 2px solid rgba(255, 255, 255, 0.5);
    }

    .btn-secondary:hover {
        border-color: var(--blanco);
        background: rgba(255, 255, 255, 0.1);
    }

    .matches-carousel-container {
        background: rgba(255, 255, 255, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 24px;
        padding: 1.5rem;
        backdrop-filter: blur(10px);
        position: relative;
        overflow: hidden;
        max-width: 600px;
    }

    .matches-carousel-container::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 4px;
        background: linear-gradient(90deg, var(--blanco), var(--negro));
    }

    .carousel-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1.5rem;
        padding: 0 0.5rem;
    }

    .carousel-title {
        font-family: 'Bebas Neue', sans-serif;
        font-size: 1.2rem;
        letter-spacing: 1px;
        color: var(--blanco);
    }

    .matches-carousel {
        overflow: hidden;
        position: relative;
    }

    .carousel-track {
        display: flex;
        transition: transform 0.4s ease;
    }

    .carousel-dots {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 0.5rem;
        margin-top: 1.25rem;
    }

    .carousel-dot {
        width: 8px;
        height: 8px;
        border-radius: 50%;
        background: rgba(255, 255, 255, 0.3);
        border: none;
        cursor: pointer;
        transition: all 0.3s ease;
        padding: 0;
    }

    .carousel-dot.active {
        background: var(--blanco);
        width: 24px;
        border-radius: 4px;
    }

    @media (max-width: 992px) {
        .hero-content {
            grid-template-columns: 1fr;
            text-align: center;
        }

        .hero-subtitle {
            margin-left: auto;
            margin-right: auto;
        }

        .hero-buttons {
            justify-content: center;
        }

        .matches-carousel-container {
            max-width: 100%;
        }
    }
</style>